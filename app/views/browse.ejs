<% include ./common/header.ejs %>
</head>
<body class="bg-void application">
<div class="navmenu navmenu-default">
	<!-- off-canvas menu goes here -->
</div>
<div class="container-flexible">
	<div class="panel panel-default panel-expanded">
		<div class="panel-body">
			<div class="row">
				<div class="col-sm-6 col-md-8">
					<div id="header-map">
						<h1><%= state %></h1>
						<!-- map goes here -->
					</div>
					<div>
						<!-- widgets / graphs go here -->
					</div>
				</div>
				<div class="col-sm-6 col-md-4">
					<select>
						<option>Nuts</option>
						<option>Dairy</option>
					</select>

					<div class="input-group">
						<input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
						<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
					</div>
					<div class="input-group">
						<input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
						<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
					</div>
					<div class="btn-group btn-group-justified" data-toggle="buttons">
						<label class="btn btn-danger active">
							<input type="checkbox" autocomplete="off" checked> Class I
						</label>
						<label class="btn btn-warning active">
							<input type="checkbox" autocomplete="off" checked> Class II
						</label>
						<label class="btn btn-info active">
							<input type="checkbox" autocomplete="off" checked> Class III
						</label>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div>
		<ol id="pinned-recalls" class="list-view empty">
			<!-- recall cards placeholder -->
		</ol>
		<div class="list-view-messages">
			<p class="list-view-loading-message"></p>

			<p class="list-view-empty-message">You have not pinned any recalls.</p>

			<p class="list-view-error-message">Oh no! We could not retrieve your pinned recalls!</p>
		</div>
	</div>
	<div>
		<ol id="recent-recalls" class="list-view empty">
			<!-- recall cards placeholder -->
		</ol>
		<div class="list-view-messages">
			<p class="list-view-loading-message spinner spinner-pulsation spinner-primary">Loading...</p>

			<p class="list-view-empty-message">There are no recent recalls.</p>

			<p class="list-view-error-message">Oops, we had trouble retrieving recent recalls!</p>
		</div>
	</div>
</div>
<div id="recall-link-copy" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Recall link</h4>
			</div>
			<div class="modal-body">
				<div class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-link"></i></span>
					<input type="text" name="recall-link" class="form-control" placeholder="Recall link" readonly="readonly">
				</div>
				<em class="small text-muted">Click to select all text.</em>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script data-main="/js/app-browse" src="/js/require.js"></script>
<script src="/js/us-states.js"></script>
<link rel="stylesheet" href="/css/bootstrap-tour-standalone.min.css">
<script src="/js/jquery-2.1.4.min.js"></script>
<script src="/js/bootstrap-tour-standalone.min.js"></script>
<script src="/js/app-recall-tour.js"></script>
<script>
	var state = '<%= state %>',
		fbappid = '<%= fbappid %>';
</script>
</body>
</html>